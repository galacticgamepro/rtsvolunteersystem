@page
@model RTSVolunteerSystem.Pages.Teams.EditModel
@{
}
<br>
<h2>Edit Team</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissable fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aris-label="Close"></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.teamInfo.id">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="teamname" value="@Model.teamInfo.teamname">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Contact Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="contactname" value="@Model.teamInfo.contactname">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Contact Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="contactemail" value="@Model.teamInfo.contactemail">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Contact Phone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="contactphone" value="@Model.teamInfo.contactphone">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="description" value="@Model.teamInfo.description">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissable fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Teams/Index" role="button">Cancel</a>
        </div>
    </div>
</form>
